{
	"manifest_version": 2,

	"name": "Expressionist",
	"description": "A chrome extension that helps your express yourself when using text.",
	"version": "1.0",

	"icons": {
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	},

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	],

	"background": {
		"scripts": ["background.js"]
	},

	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"permissions": ["storage", "<all_urls>"]
}
