{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"strict": true,
		"noImplicitAny": false,
		"sourceMap": true,
		"outDir": "dist/js",
		"noEmitOnError": true,
		"lib": ["es2015", "dom", "es2017"],
		"forceConsistentCasingInFileNames": false
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "test"]
}
